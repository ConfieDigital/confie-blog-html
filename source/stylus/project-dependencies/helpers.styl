// Clearfix
clearfix()
    &:before, &:after
        content ''
        display table
    &:after 
        clear both

.visually-hidden
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px

placeholder(n)
    &::-webkit-input-placeholder 
       color n

    &:-moz-placeholder
       color n

    &::-moz-placeholder
       color n

    &:-ms-input-placeholder
       color n